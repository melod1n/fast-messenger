    <style name="AppTheme" parent="Base.V21.AppTheme" />

    <style name="Base.V21.AppTheme.Alert" parent="Theme.Material3.DayNight.Dialog.Alert" />

    <style name="AppTheme.Alert" parent="Base.V21.AppTheme.Alert">
        <item name="dialogCornerRadius">12dp</item>
    </style>


    <style name="AppTheme.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/colorBackground</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="postSplashScreenTheme">@style/AppTheme</item>
    </style>

</resources>