<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainGraph"
    app:startDestination="@id/startFragment">

    <fragment
        android:id="@+id/startFragment"
        android:name="com.meloda.fast.screens.start.StartFragment">

        <action
            android:id="@+id/toMainScreen"
            app:destination="@id/mainFragment"
            app:popUpTo="@id/startFragment"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/toLoginScreen"
            app:destination="@id/loginGraph" />

    </fragment>

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.meloda.fast.screens.main.MainFragment"
        tools:layout="@layout/fragment_main">

        <action
            android:id="@+id/toLoginScreen"
            app:destination="@id/loginGraph" />

    </fragment>

    <include app:graph="@navigation/login" />

</navigation>